// Place your key bindings in this file to override the defaults
[
    // Vim up-down navigation in action menu.
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "editorHasCompletionItemProvider && editorTextFocus"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "editorHasCompletionItemProvider && editorTextFocus"
    },
    
    // Vim up-down navigation in command palette.
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },

    // Vim up-down nabigation in quick actions.
    {
        "key": "ctrl+j",
        "command": "selectNextCodeAction", // in v1.71
        "when": "codeActionMenuVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevCodeAction", // in v1.71
        "when": "codeActionMenuVisible"
    },
]
